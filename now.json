{
  "version": 2,
  "name":"varlet",
  "scope": "riipandi",
  "public": true,
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "routes": [
    {
      "src": "/_next/(.*)",
      "headers": {
        "key" : "Cache-Control",
        "value" : "public, max-age=604800, must-revalidate"
      },
      "dest": "/_next/$1"
    },
    {
      "src": "/_next/(.*)",
      "headers": { "key" : "accept-encoding", "value" : "gzip, deflate" },
      "dest": "/_next/$1"
    },
    {
      "src": "/img/(.*)",
      "headers": {
        "key" : "Cache-Control",
        "value" : "public, max-age=604800, must-revalidate"
      },
      "dest": "/img/$1"
    },
    { "src": "/release", "dest": "/api/release" },
    {
      "src": "/latest",
      "status": 301,
      "headers": { "Location": "https://github.com/varletdev/varlet/releases/latest" }
    }
  ]
}
